    <h3>Current Blog Templates:</h3>
    {{#each BlogTemplates as |project|}}
      <div class="blogContainer">
        <h4 class="title"><a  href="/project/{{project.id}}">{{project.title}}</a></h4>
        <h4 class="content"><a  href="/project/{{project.id}}">{{project.content}}</a></h4>
        <button class="deleteBtn" data-id="{{project.id}}">DELETE</button>
